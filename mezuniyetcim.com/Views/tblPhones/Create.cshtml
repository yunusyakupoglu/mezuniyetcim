@model mezuniyetcim.com.Entities.tblPhone

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2>Telefon Numarası Ekle</h2>
                <hr />
                <form id="contact" asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <fieldset>
                                <input asp-for="phoneNumber" type="text" class="form-control" id="name" placeholder="Telefon Numarası" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <div class="filled-rectangle-button">
                                <button type="submit" value="Create">Oluştur</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>




















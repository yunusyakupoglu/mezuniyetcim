@model mezuniyetcim.com.Entities.Events

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_admin.cshtml";
}


<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2>Anımsatıcı Ekle</h2>
                <hr />
                <form id="contact" asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="row">
                        <div class="col-md-12">
                            <fieldset>
                                <label asp-for="title" class="control-label">Başlık</label>
                                <input asp-for="title" type="text" class="form-control" placeholder="Başlık" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <label asp-for="start" class="control-label">Başlangıç</label>
                                <input asp-for="start" class="form-control" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <label asp-for="end" class="control-label">Bitiş</label>
                                <input asp-for="end" class="form-control" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <label asp-for="color" class="control-label">Arkaplan Rengi</label>
                                <input asp-for="color" type="color" class="form-control" id="name" placeholder="Arkaplan Rengi" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <label asp-for="textColor" class="control-label">Yazı Rengi</label>
                                <input asp-for="textColor" type="color" class="form-control" id="name" placeholder="Yazı Rengi" required="">
                            </fieldset>
                        </div>

                        <div class="col-md-12">
                            <div class="filled-rectangle-button">
                                <button type="submit" value="Create">Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Tüm Anımsatıcılar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
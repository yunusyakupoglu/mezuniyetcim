@model IEnumerable<mezuniyetcim.com.Entities.tblAddress>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<div class="col-md-6 col-sm-12">
    <div class="row">
        <div class="col-md-6">
            <div class="filled-rectangle-button">
                <a asp-action="Create">Adres Ekle</a>
            </div>
        </div>
    </div>
</div>
<div class="alternate-table">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Şehir
                </th>
                <th>
                    İlçe
                </th>
                <th>
                    Mahalle
                </th>
                <th>
                    Cadde
                </th>
                <th>
                    Sokak
                </th>
                <th>
                    Adres Tanımı
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sehir)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.İlce)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mahalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cadde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sokak)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.adresTanımı)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.adresId">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.adresId">Detaylar</a> |
                        <a asp-action="Delete" asp-route-id="@item.adresId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
@model mezuniyetcim.com.Entities.tblProductCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<!-- Forms -->
<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2>Kategori Ekle</h2>
                <hr />
                <form id="contact" asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <fieldset>
                                <input asp-for="productCategoryName" type="text" class="form-control" id="name" placeholder="Kategori Adı..." required="">
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <div class="filled-rectangle-button">
                                <button type="submit" value="Create">Oluştur</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Tüm Kategoriler</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

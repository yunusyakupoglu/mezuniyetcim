@model IEnumerable<mezuniyetcim.com.Entities.tblProductCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_panel.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.productCategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.productCategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.productCategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.productCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
